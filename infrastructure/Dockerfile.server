# Server Dockerfile
FROM node:18-alpine

WORKDIR /app

COPY package*.json ./
COPY server/package*.json ./server/
COPY shared/package*.json ./shared/

# Install dependencies (workspaces)
RUN npm install

COPY server ./server
COPY shared ./shared

WORKDIR /app/server
RUN npm run build

EXPOSE 3001

CMD ["npm", "start"]

{
  "name": "cacblaze-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared",
    "infrastructure"
  ],
  "scripts": {
    "start": "npm run start --workspaces",
    "dev": "concurrently \"npm run dev -w @cacblaze/server\" \"npm run dev -w @cacblaze/client\" --kill-others-on-fail --prefix \"[{name}]\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,magenta\"",
    "build": "npm run build --workspaces"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
